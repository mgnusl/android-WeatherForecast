<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:flatui="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.cengalabs.flatui.views.FlatEditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchEditText"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:padding="11dp"
            android:paddingRight="50dp"
            android:paddingLeft="10dp"
            android:hint="Search..."
            flatui:fieldStyle="flat"
            flatui:cornerRadius="3dip"
            flatui:fontFamily="Roboto"/>

        <com.cengalabs.flatui.views.FlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get forecast"
            android:id="@+id/searchButton"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            flatui:textAppearance="none"
            flatui:fontWeight="light"
            flatui:fontFamily="Roboto"
            android:layout_alignBottom="@+id/searchEditText"
            android:layout_toRightOf="@+id/searchEditText"/>
    </RelativeLayout>


    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location finder"
        android:id="@+id/locfindButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        flatui:textAppearance="light"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previousSearchesListView"
        android:layout_below="@+id/locfindButton"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>